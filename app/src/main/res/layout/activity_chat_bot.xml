<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F44336"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="103dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            app:srcCompat="@mipmap/kizuna"
            tools:layout_conversion_absoluteHeight="214dp"
            tools:layout_editor_absoluteY="290dp"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_conversion_absoluteWidth="158dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Druk op Kizuna om een vraag te stellen!"
            android:textColor="@color/aidialog_background"
            android:textSize="20dp"
            android:textStyle="normal"
            tools:layout_conversion_absoluteHeight="65dp"
            tools:layout_editor_absoluteY="514dp"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_conversion_absoluteWidth="356dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtSpeechInput"
            android:layout_width="356dp"
            android:layout_height="110dp"
            android:layout_alignStart="@id/outputTex"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:textAlignment="center"
            android:textColor="@color/aidialog_background"
            android:textSize="26dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/outputTex"
            android:layout_width="368dp"
            android:layout_height="498dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:textAlignment="center"
            android:textColor="@color/aidialog_background"
            android:textSize="26dp"
            android:textStyle="normal" />
    </LinearLayout>

</RelativeLayout>